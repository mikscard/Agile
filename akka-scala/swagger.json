    post:
      tags:
      - Characteristics
      summary: Updates an Agile Characteristic.
      operationId: update_characteristic
      produces:
      - application/json
      parameters:
      - name: id
        in: path
        description: Agile Characteristic to update.
        required: true
        type: integer
      responses:
        "200":
          description: Successful operation to update an Agile Characteristic
      security:
      - agile_auth:
        - write:agile
        - read:agile
securityDefinitions:
  agile_auth:
    type: oauth2
    authorizationUrl: http://127.0.0.1:8000
    flow: implicit
    scopes:
      write:agile: modify data
      read:agile: read data
definitions:
  Value:
    type: object
    properties:
      id:
        type: integer
        format: int64
      value_text:
        type: string
        description: The values of Agile Value.
  Characteristic:
    type: object
    properties:
      id:
        type: integer
        format: int64
      characteristic_text:
        type: string
        description: The values of Agile Characteric.
